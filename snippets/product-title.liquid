{%- assign current_variant = product.selected_or_first_available_variant -%}
{%- assign product_reference_code = current_variant.sku | strip -%}
{%- if product_reference_code != blank -%}
  <p class="p" data-product-reference>
    {{ 'customer.order.sku' | t }}: <span data-product-reference-value>{{ product_reference_code }}</span>
  </p>
{%- endif -%}

<!-- /snippets/product-title.liquid -->

{%- if block.settings.text_size -%}
  {% assign heading_size_class = block.settings.text_size | prepend: 'heading-size-' %}
{%- endif -%}

<div class="product__block__title !pb-0" {{ block.shopify_attributes }}>
  <div class="product__headline">
    <div class="product__title__wrapper lg:w-full">
      <h1 class="product__title text-white! lg:text-[#3c3f36]! {{ heading_size_class }}">
        {% if template contains 'product' and block %}
          {{ product.title }}
        {% else %}
          <a href="{{ product.url }}">{{ product.title }}</a>
        {% endif %}
      </h1>

      {%- if block.settings.show_rating and product.metafields.reviews.rating.value != blank -%}
        <div class="rating__wrapper__title">
          {% render 'product-rating', product: product, show_rating_count: block.settings.show_rating_count %}
        </div>
      {%- endif -%}
    </div>

    {%- if product.metafields.theme.cutline != blank and product.metafields.theme.cutline.type == 'single_line_text_field' and block.settings.product_show_cutline -%}
      <p class="product__page__cutline">{{ product.metafields.theme.cutline.value }}</p>
    {%- endif -%}
  </div>
</div>
