<!-- /snippets/cart-line-items.liquid -->

{%- assign cart_products = '' -%}

<div class="cart__items gap-4! grid!">
  {% for line_item in cart.items %}
    <div class="cart__items__row bg-[linear-gradient(80deg,#e0e0e0,#f2f3f2)]! border-0! rounded-[6px]!" data-cart-item>
      <div
        class="item--loadbar"
        data-item-loadbar
        style="display: none;">&nbsp;</div>
      <div class="cart__items__grid h-auto! lg:h-[234px]! lg:py-4! items-center gap-0! lg:gap-5! flex-col! flex! lg:flex-row!" items data-item>

        <div class="cart__items__image{% unless line_item.image %} w-full! h-full! product-no-image{% endunless %} w-full! h-auto! lg:w-[260px]! lg:h-[202px]! ml-0! lg:ml-[10px]!">
          <a href="{{ line_item.url }}">
            {% if line_item.image %}
              {% assign image = line_item.image %}
              {% assign image_width = 600 | at_most: image.width %}
              {% assign image_width_2x = image_width | times: 2 | at_most: image.width %}
              {% assign alt = line_item.title %}

              {% capture srcset %}
                {{ image | image_url: width: image_width_2x }} 2x,
                {{ image | image_url: width: image_width }}
              {% endcapture %}

              {%- render 'image',
                img_object: image,
                wh_ratio: 0,
                width: image_width,
                srcset: srcset,
                alt: alt,
                class: 'cart__items__img w-full! h-auto! aspect-[1.28114/1]! lg:w-full! lg:h-full! lg:aspect-auto! object-cover!'
              -%}
              <!-- image_width debug: {{ image_width }} width_default: {{ 260 | at_most: image.width }} -->
            {% endif %}
          </a>
        </div>

        <div class="cart__items__title h-auto! lg:h-auto! text-[16px]! lg:text-[20px]! w-full! px-4! lg:px-0!">
          <p>
            <a href="{{ line_item.url }}" class="pb-2! lg:leading-[1.2]! font-semibold!" style="display: block; overflow: hidden; text-overflow: ellipsis; font-family: 'Inter', sans-serif;">
              {{ line_item.product.title }}
            </a>
          </p>
          <div class="flex flex-col items-start">
                      <div class="cart__items__quantity">
            <div class="quantity__wrapper gap-2! max-w-none! w-fit! lg:py-1!" data-quantity-selector>
                <label for="updates_{{ line_item.key }}" class="text-[12px]! lg:text-[14px]! text-nowrap! font-light! text-black!">{{ 'cart.label.quantity' | t }}</label>
                <div class="flex items-center">
                               <button
                class="quantity__button quantity__button--minus static! w-4! h-4! p-0! flex! items-center! justify-center!"
                data-decrease-quantity
                type="button">
                <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M2 6H10" stroke="#3B3A3B" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                </button>
              <input
                data-quantity-input
                data-update-cart="{{ line_item.key }}"
                class="quantity__input border-0! text-black! p-0! w-[40px]! text-center! text-[14px]!"
                type="number"
                min="0"
                id="updates_{{ line_item.key }}"
                name="updates[]"
                value="{{ line_item.quantity }}" />
              <button
                class="quantity__button quantity__button--plus static! font-light! text-[28px]! px-0!"
                data-increase-quantity
                type="button">
               <svg width="12" height="12" viewBox="0 0 24 24"  fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M4 12H20M12 4V20" stroke="#3B3A3B" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> </g></svg> 
                </button>
                </div>
            </div>
          </div>
          <div class="cart__items__price flex! flex-row-reverse! justify-between! text-nowrap! gap-2!">
            <p class="line__price flex! flex-row! text-[12px]! lg:text-[14px]! text-black! font-light!">
              Preço unitário:
              {%- assign discounted = false -%}
              {%- if line_item.original_price > line_item.final_price -%}
                {%- assign discounted = true -%}
                {%- capture discounted_price -%}
                <del>
                  {% if settings.currency_code_enable %}
                    {{ line_item.original_price | money_with_currency }}
                  {% else %}
                    {{ line_item.original_price | money }}
                  {% endif %}
                </del>
              {%- endcapture -%}
              {%- endif -%}

              {%- assign sale = false -%}
              {%- assign sale_plan_allocation = false -%}

              {%- if line_item.selling_plan_allocation != blank -%}
                {%- assign sale_plan_allocation = true -%}
              {%- endif -%}

              {%- if sale_plan_allocation -%}
                {%- if line_item.selling_plan_allocation.compare_at_price > line_item.selling_plan_allocation.price -%}
                  {%- assign sale = true -%}
                {%- endif -%}
              {%- else -%}
                {%- if line_item.variant.compare_at_price > line_item.price -%}
                  {%- assign sale = true -%}
                {%- endif -%}
              {%- endif -%}

              {%- if sale -%}
                {%- capture sale_price -%}
                <del>
                  {%- if sale_plan_allocation -%}
                    {% if settings.currency_code_enable %}
                      {{ line_item.selling_plan_allocation.compare_at_price | money_with_currency }}
                    {% else %}
                      {{ line_item.selling_plan_allocation.compare_at_price | money }}
                    {% endif %}
                  {%- else -%}
                    {% if settings.currency_code_enable %}
                      {{ line_item.variant.compare_at_price | money_with_currency }}
                    {% else %}
                      {{ line_item.variant.compare_at_price | money }}
                    {% endif %}
                  {% endif %}
                </del>
              {%- endcapture -%}
              {%- endif -%}

              {%- comment -%} if we have sale and discount, show the discounted price like on the checkout {%- endcomment -%}
              {%- if sale and discounted -%}
                {{- discounted_price -}}
              {%- else -%}
                {%- if sale -%}
                  {{- sale_price -}}
                {%- endif -%}

                {%- if discounted -%}
                  {{- discounted_price -}}
                {%- endif -%}
              {%- endif -%}

              {%- if sale or discounted -%}
                <mark>
                  {% if settings.currency_code_enable %}
                    {{ line_item.final_price | money_with_currency }}
                  {% else %}
                    {{ line_item.final_price | money }}
                  {% endif %}
                </mark>
              {%- else -%}
                {% if settings.currency_code_enable %}
                  {{ line_item.final_price | money_with_currency }}
                {% else %}
                  {{ line_item.final_price | money }}
                {% endif %}
              {%- endif -%}
            </p>
            {% if line_item.unit_price %}
              {% capture unit_price_separator %}
              <span aria-hidden="true">/</span><span class="visually-hidden">{{ 'general.accessibility.unit_price_separator' | t }}&nbsp;</span>
            {% endcapture %}
              {% capture unit_price_base_unit %}
              {% if line_item.unit_price_measurement.reference_value != 1 %}
                {{ line_item.unit_price_measurement.reference_value }}
              {% endif %}
              {{ line_item.unit_price_measurement.reference_unit }}
            {% endcapture %}
              <p class="line__price">
                <span class="visually-hidden">{{ 'products.product.unit_price_label' | t }}</span>
                <span>
                  {% if settings.currency_code_enable %}
                    {{ line_item.unit_price | money_with_currency }}
                  {% else %}
                    {{ line_item.unit_price | money }}
                  {% endif %}
                  {{ unit_price_separator }}{{ unit_price_base_unit }}</span>
              </p>
            {% endif %}

            <div class="cart__items__total mt-0! text-[12px]! lg:text-[14px]! font-bold! flex! gap-2!">
              {% if settings.currency_code_enable %}
                {{ line_item.final_line_price | money_with_currency }}
              {% else %}
                <span class="font-light!">Preço:</span> {{ line_item.final_line_price | money }}
              {% endif %}
            </div>
          </div>
           <div class="cart__items__remove block! static!">
          <a
            class="block!"
            href="{{ routes.cart_change_url }}?line={{ forloop.index }}&amp;quantity=0"
            data-remove-key="{{ line_item.key }}"
            tabindex="0">
            <span class="lg:hidden text-base! text-black! border-b! border-black! border-solid! my-[10px]! leading-[12px]! underline-offset-8! py-[5px]!">REMOVER</span>
            <span class="cart__remove__icon hidden lg:inline">
              {%- render 'icon-core-trash' -%}
            </span>
            <span class="cart__remove block! text-base! text-black! border-b! border-black! border-solid! my-[10px]!">
              {{ 'cart.general.remove' | t }}
            </span>
          </a>
        </div>

          </div>
        </div>

        {% comment %} <div class="cart__items__quantity">
                                                                                <div class="quantity__wrapper" data-quantity-selector>
                                                                                  <button class="quantity__button quantity__button--minus" data-decrease-quantity type="button">&minus;</button>
                                                                                  <label for="updates_{{ line_item.key }}" class="visually-hidden">{{ 'cart.label.quantity' | t }}</label>
                                                                                  <input data-quantity-input
                                                                                    data-update-cart="{{ line_item.key }}"
                                                                                    class="quantity__input"
                                                                                    type="number"
                                                                                    min="0"
                                                                                    id="updates_{{ line_item.key }}"
                                                                                    name="updates[]"
                                                                                    value="{{ line_item.quantity }}"/>
                                                                                  <button class="quantity__button quantity__button--plus" data-increase-quantity type="button">+</button>
                                                                                </div>
                                                                </div> {% endcomment %}

        {% if discounted and line_item.quantity >= 1 %}
          {%- for discount in line_item.line_level_discount_allocations -%}
            <div class="cart__items__savings">
              <span class="item__total__savings">
                <span class="cart__icon--tags">
                  {% render 'icon-core-tags' %}
                </span>
                {{ 'cart.general.savings' | t }}
                {% if settings.currency_code_enable %}
                  {{ discount.amount | money_with_currency }}
                {% else %}
                  {{ discount.amount | money_without_trailing_zeros }}
                {% endif %}
                {{ 'cart.general.with' | t }}
                {{ discount.discount_application.title }}
              </span>
            </div>
          {%- endfor -%}
        {% endif %}
      </div>
    </div>
    {%- assign cart_products = cart_products | append: line_item.product.id | append: ',' -%}
  {% endfor %}
</div>

{%- liquid
  assign best_upsell = nil
  assign for_free_shipping = settings.free_shipping_limit | times: 100 | minus: cart.total_price | at_least: 0

  for cart_item in cart.items

    # Cart upsell will be the first line item upsell available, best single upsell beats best upsell_list
    assign upsell_list = cart_item.product.metafields.theme.upsell_list.value
    assign upsell_product = cart_item.product.metafields.theme.upsell.value

    if upsell_product and upsell_product.available
      unless cart_products contains upsell_product.id
        if best_upsell == nil
          assign best_upsell = upsell_product
        elsif upsell_product.price >= for_free_shipping and upsell_product.price < best_upsell.price
          assign best_upsell = upsell_product
        endif
      endunless
    endif

    for upsell_product in upsell_list
      if upsell_product and upsell_product.available
        unless cart_products contains upsell_product.id
          if best_upsell == nil
            assign best_upsell = upsell_product
          elsif upsell_product.price >= for_free_shipping and upsell_product.price < best_upsell.price
            assign best_upsell = upsell_product
          endif
        endunless
      endif
    endfor
  endfor
-%}

{%- if best_upsell -%}
  <div class="upsell__holder" data-cart-page-upsell-wrapper>
    <div class="upsell__holder__title">
      <h2 class="upsell__holder__title__text">
        {{ 'products.general.buy_with' | t }}
      </h2>
    </div>
    {%- render 'product-clip' card_product: best_upsell -%}
  </div>
{%- endif -%}