<!-- /sections/section-image-slider.liquid -->

{% assign slider_markup = '' %}

{% assign has_block_with_image = false %}
{% assign is_product_or_collection = false %}
{% if product or collection %}
  {% assign is_product_or_collection = true %}
{% endif %}

{% capture slider_markup %}
  {% for block in section.blocks %}
    <div class="image-slider__item{% if is_product_or_collection and block.settings.image == blank %} hide{% endif %}"
      style="--gutter: {{ block.settings.spacing }}px; --width: {{ block.settings.width }}px;"
      data-slide="{{ block.id }}"
      data-slide-index="{{ forloop.index0 }}"
      {{ block.shopify_attributes }}>
        {% if block.settings.link != blank %}
          <a
            href="{{ block.settings.link }}"
            class="image-slider__link"
            {% if block.settings.new_tab %}target="_blank" rel="noopener"{% endif %}
            title="{{ block.settings.link }}"
          >
        {% endif %}

        {% if block.settings.image != blank %}
          {% assign has_block_with_image = true %}
          {%- assign image_width = block.settings.image.width | at_most: block.settings.width %}
          {%- assign image_width_2x = image_width | times: 2 %}

          {% capture srcset %}
            {{ block.settings.image | image_url: width: image_width_2x }} 2x,
            {{ block.settings.image | image_url: width: image_width }}
          {% endcapture %}

          {% render 'image', cover: false, img_object: block.settings.image, srcset: srcset, width: image_width, class: 'max-h-[--width]' %}
          {% if block.settings.text_image %}
            <p class="text-black text-[16px] mt-2"> {{ block.settings.text_image }}</p>
          {% endif %}
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}

        {% if block.settings.link != blank %}
          </a>
        {% endif %}
    </div>
  {% endfor %}
{% endcapture %}

<div class="section-image-slider {{ section.settings.bg }}{% if section.settings.title != blank %} section-image-slider--tall{% endif %}{% if is_product_or_collection and has_block_with_image == false and request.design_mode == false %} hide{% endif %}"
  style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px; --slides-per-view: {{ section.settings.slides_per_view }};"
  data-section-id="{{ section.id }}"
  data-section-type="image-slider">
  <div class="{{ section.settings.width }} section-padding">
    {% if section.settings.title != blank %}
      <h2 class="kicker-flourished mb-r11">{{ section.settings.title | escape }}</h2>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="image-slider__wrapper relative">
        <div class="image-slider__container overflow-hidden">
          <div class="image-slider__track flex transition-transform duration-500 ease-in-out" data-slider-track>
            {{ slider_markup }}
          </div>
        </div>

        {% if section.settings.show_navigation and section.blocks.size > section.settings.slides_per_view %}
          <button 
            class="image-slider__nav image-slider__nav--prev absolute left-0 top-1/2 -translate-y-1/2 z-10 bg-white/80 hover:bg-white p-3 rounded-full shadow-lg transition-all disabled:opacity-30 disabled:cursor-not-allowed"
            data-slider-prev
            aria-label="Previous slide">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
          </button>
          
          <button 
            class="image-slider__nav image-slider__nav--next absolute right-0 top-1/2 -translate-y-1/2 z-10 bg-white/80 hover:bg-white p-3 rounded-full shadow-lg transition-all disabled:opacity-30 disabled:cursor-not-allowed"
            data-slider-next
            aria-label="Next slide">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </button>
        {% endif %}

        {% if section.settings.show_dots and section.blocks.size > section.settings.slides_per_view %}
          <div class="image-slider__dots flex justify-center gap-2 mt-6" data-slider-dots>
            {% for block in section.blocks %}
              {% if forloop.index0 < section.blocks.size %}
                <button 
                  class="image-slider__dot w-2 h-2 rounded-full bg-gray-300 transition-all hover:bg-gray-400"
                  data-dot-index="{{ forloop.index0 }}"
                  aria-label="Go to slide {{ forloop.index }}">
                </button>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size == 0 %}
      <div class="text-center">{{ 'home_page.onboarding.no_content' | t }}</div>
    {% elsif is_product_or_collection and has_block_with_image == false and request.design_mode %}
      <div class="text-center">{{ 'home_page.onboarding.no_content' | t }}</div>
    {% endif %}

  </div>
</div>

<style>
  .image-slider__item {
    flex: 0 0 calc((100% - (var(--slides-per-view, 3) - 1) * var(--gutter, 50px)) / var(--slides-per-view, 3));
    margin-right: var(--gutter, 50px);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .image-slider__item:last-child {
    margin-right: 0;
  }

  .image-slider__link {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
  }

  .image-slider__dot[data-active="true"] {
    background-color: var(--color-text, #000);
    width: 2rem;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sliders = document.querySelectorAll('[data-section-type="image-slider"]');
    
    sliders.forEach(slider => {
      const track = slider.querySelector('[data-slider-track]');
      const prevBtn = slider.querySelector('[data-slider-prev]');
      const nextBtn = slider.querySelector('[data-slider-next]');
      const dots = slider.querySelectorAll('[data-dot-index]');
      const items = track.querySelectorAll('.image-slider__item');
      
      let currentIndex = 0;
      const totalItems = items.length;
      const slidesPerView = parseInt(getComputedStyle(slider).getPropertyValue('--slides-per-view')) || 3;
      const maxIndex = Math.max(0, totalItems - slidesPerView);

      function updateSlider() {
        const itemWidth = items[0]?.offsetWidth || 0;
        const gutter = parseInt(getComputedStyle(items[0]).getPropertyValue('--gutter')) || 0;
        const offset = currentIndex * (itemWidth + gutter);
        
        track.style.transform = `translateX(-${offset}px)`;

        // Update buttons
        if (prevBtn) prevBtn.disabled = currentIndex === 0;
        if (nextBtn) nextBtn.disabled = currentIndex >= maxIndex;

        // Update dots
        dots.forEach((dot, index) => {
          dot.setAttribute('data-active', index === currentIndex);
        });
      }

      if (prevBtn) {
        prevBtn.addEventListener('click', () => {
          if (currentIndex > 0) {
            currentIndex--;
            updateSlider();
          }
        });
      }

      if (nextBtn) {
        nextBtn.addEventListener('click', () => {
          if (currentIndex < maxIndex) {
            currentIndex++;
            updateSlider();
          }
        });
      }

      dots.forEach(dot => {
        dot.addEventListener('click', () => {
          const index = parseInt(dot.getAttribute('data-dot-index'));
          if (index <= maxIndex) {
            currentIndex = index;
            updateSlider();
          }
        });
      });

      // Initialize
      updateSlider();

      // Handle resize
      let resizeTimeout;
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(updateSlider, 250);
      });
    });
  });
</script>

